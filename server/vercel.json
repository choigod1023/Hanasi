{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "src/index.ts",
      "methods": ["GET"]
    },
    {
      "src": "/api/generate-topic",
      "dest": "src/index.ts",
      "methods": ["POST"]
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ]
}
